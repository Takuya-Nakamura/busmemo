<!DOCTYPE html>
<html>

<head>
  <title>AppName</title>
  <%= favicon_link_tag('favicon.ico') %>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://fonts.googleapis.com/css?family=Righteous&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

  <%= stylesheet_link_tag    'base', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class='header'>
    <div class='header__item'></div>
    <div class='header__item header__item--full logo-text'> BusMemo </div>
    <div class='header__item'>
      <% if user_signed_in? %>
      <a href='/logout'> <i class="fas fa-sign-out-alt login-icon"></i></a>
      <% else %>
      <a href='/login'> <i class="fas fa-sign-in-alt login-icon"></i></a>
      <% end %>
    </div>

  </div>

  <div class='main'>
    <%= yield %>
  </div>

  <div class='footer'>
    <div class='logo-text'>BusMemo</div>
  </div>

</html>