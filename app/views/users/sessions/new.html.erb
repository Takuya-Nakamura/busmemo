<div class='login-form'>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form__item">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form__text' %>
  </div>

  <div class="form__item">
    <%= f.password_field :password, autocomplete: "current-password",:class => 'form__text' %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form__item">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>